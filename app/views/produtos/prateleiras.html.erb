<% ambiente = @ambiente %>
<%= hidden_field_tag('produto_id', @produto.id) %>
<h1><%= ambiente.nome %></h1>
<div id="prateleiras_horizontais">
  <table>
    <tr>
      <% ambiente.prateleiras.horizontais.sort.each do |ph| %>
          <td >
            <div  id="prateleira_<%= ph.id %>" class="click prateleira horizontal" style="<%= ph.id == @prateleira.id ? "#{ph.style} background-color: blue" : ph.style  %>">
            </div>
          </td>
      <% end %>
    </tr>

  </table>
</div>

<div id="prateleiras_verticais">
  <table >
    <tr>
      <% ambiente.prateleiras.verticais.sort.each do |pv| %>
          <td >
            <div id="prateleira_<%= pv.id %>" class="click prateleira vertical" style="<%= pv.id == @prateleira.id ? "#{pv.style} background-color: blue" : pv.style %>"></div>
          </td>
      <% end %>
    </tr>
  </table>
</div>

<div id="ambiente" class="ambiente">
  <table>
    <% (1..6).each do |x| %>
        <tr>
          <% (1..6).each do |y| %>
              <td id="dop_in_<%= x %>_<%= y %>" class="ambiente_interno " value="{:x => <%= x %>,:y => <%= y %>}"></td>
          <% end %>
        </tr>
    <% end %>

  </table>

</div>
