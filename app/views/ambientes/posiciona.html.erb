<% ambiente = @ambiente %>
<h1><%= ambiente.nome %></h1>

<div id="prateleiras_horizontais">
  <table>
    <tr>
      <% ambiente.prateleiras.horizontais.sort.each do |ph| %>
          <td title="<%= ph.descricao %>">
            <div id="prateleira_<%= ph.id %>" class="prateleira_drag prateleira horizontal" style="height: <%=ph.largura_em_pixels %>px; width: <%=ph.comprimento_em_pixels %>px;<%= ph.style %>"><%= ph.abreviado 1 %>
            </div>
          </td>
      <% end %>
    </tr>

  </table>
</div>

<div id="prateleiras_verticais">
  <table>
    <tr>
      <% ambiente.prateleiras.verticais.sort.each do |ph| %>
          <td title="<%= ph.descricao %>">
            <div id="prateleira_<%= ph.id %>" class="prateleira_drag prateleira vertical" style="height: <%=ph.largura_em_pixels %>px; width: <%=ph.comprimento_em_pixels %>px; <%= ph.style %>"><%= ph.abreviado 1 %></div>
          </td>
      <% end %>
    </tr>
  </table>
</div>

<div class="drop " style="height: <%=ambiente.largura_em_pixels %>px; width: <%=ambiente.comprimento_em_pixels %>px; background-color: #999999;">

</div>
